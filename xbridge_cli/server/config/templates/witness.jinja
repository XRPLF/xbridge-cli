{
  "LockingChain": {
    "Endpoint": {
      {% if is_docker %}
      "Host": "192.168.176.2",
      {% elif locking_chain_ip %}
      "Host": "{{ locking_chain_ip }}",
      {% else %}
      "Host": "127.0.0.1",
      {% endif %}
      "Port": {{ locking_chain_port }}
    },
    "TxnSubmit": {
      "ShouldSubmit": true,
      "SigningKeySeed": "{{ locking_reward_seed }}",
      "SigningKeyType": "ed25519",
      "SubmittingAccount": "{{ locking_reward_account }}"
    },
    "RewardAccount": "{{ locking_reward_account }}"
  },
  "IssuingChain": {
    "Endpoint": {
      {% if is_docker %}
      "Host": "192.168.176.3",
      {% elif is_linux %}
      "Host": "127.0.0.2",
      {% elif issuing_chain_ip %}
      "Host": "{{ issuing_chain_ip }}",
      {% else %}
      "Host": "127.0.0.1",
      {% endif %}
      "Port": {{ issuing_chain_port }}
    },
    "TxnSubmit": {
      "ShouldSubmit": true,
      "SigningKeySeed": "{{ issuing_reward_seed }}",
      "SigningKeyType": "ed25519",
      "SubmittingAccount": "{{ issuing_reward_account }}"
    },
    "RewardAccount": "{{ issuing_reward_account }}"
  },
  "RPCEndpoint": {
    {% if is_docker %}
    "Host": "0.0.0.0",
    {% elif is_linux %}
    "Host": "127.0.0.3",
    {% else %}
    "Host": "127.0.0.1",
    {% endif %}
    "Port": {{ witness_port }}
  },
  "LogFile": "{{ log_file }}",
  "LogLevel": "Trace",
  "DBDir": "{{ db_dir }}",
  "SigningKeySeed": "{{ seed }}",
  "SigningKeyType": "ed25519",
  "XChainBridge": {
    "LockingChainDoor": "{{ src_door }}",
    "LockingChainIssue": {{ src_issue }},
    "IssuingChainDoor": "{{ dst_door }}",
    "IssuingChainIssue": {{ dst_issue }}
  }
}
